@model WebAppMVC_College.models.Student

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<style type="text/css">
    h4 {
        font-size: 24px;
    }

    .card {
        box-shadow: 0 4px 8px 0 #8D8D8D;
        border-radius: 5px;
        transition: 0.3s;
        padding: 40px;
        width: 500px;
        height: 600px;
        position: relative;
        margin-top: 20px;
        margin-bottom: auto;
        margin-left: auto;
        margin-right: auto;
        background-color: #FFFFFF;
    }

    input:-webkit-autofill,
    input:-webkit-autofill:hover,
    input:-webkit-autofill:focus,
    input:-webkit-autofill:active {
        transition: background-color 5000s ease-in-out 0s;
    }

    .input-group {
        position: relative;
    }

        .input-group .input-area {
            border: 1px solid #03A9F4;
            padding: 30px 12px;
            font-size: 20px;
            width: 400px;
            height: 24px;
            border-radius: 5px;
        }

            .input-group .input-area:focus {
                border: 0px solid #03A9F4;
            }

                .input-group .input-area:focus + .label {
                    top: -16px;
                    padding: 0 3px;
                    font-size: 20px;
                    color: #03A9F4;
                    border-radius: 5px;
                }

        .input-group .label {
            color: #8D8D8D;
            position: absolute;
            top: 20px;
            left: 13px;
            background: #FFFFFF;
            transition: 0.3s;
            border-radius: 5px;
        }

        .input-group .input-area:valid + .label {
            top: -10px;
            padding: 0 3px;
            font-size: 16px;
            color: #03A9F4;
            border-radius: 5px;
        }

    .blue-link {
        font-size: 24px;
        color: #03A9F4;
        text-decoration: none;
    }

        .blue-link:hover {
            color: #01579B;
            transition: 0.8s;
            text-decoration: none;
        }

    .blue-button {
        font-size: 24px;
        border-radius: 8px;
        padding: 14px 12px;
        background-color: #03A9F4;
        color: #FFFFFF;
        text-decoration: none;
    }

        .blue-button:hover {
            background-color: #01579B;
            color: #FFFFFF;
            transition: 0.8s;
            text-decoration: none;
        }

    body {
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        background-image: url("/assets/img/update.jpg");
        background-size: 100%;
        background-repeat: no-repeat;
    }
</style>

<div class="card">
    <h2 style="font-size:40px; margin-left:20px; font-weight: bold;">Update</h2>
    @using (Html.BeginForm("Update", "Student", FormMethod.Post))
    {
        <input type="text" id="StudentId" name="StudentId" value="@Model.StudentId" hidden />
        <table align="center" style="margin-top:20px;margin-bottom:20px;">
            <tr>
                <td>
                    <div class="input-group">
                        <input type="text" id="StudentName" name="StudentName" class="input-area" pattern="^[a-zA-Z ]{1-50}$" value="@Model.StudentName" required/>
                        <label for="StudentName" class="label">Name</label>
                    </div>
                </td>
            </tr>
            <tr><td>&nbsp;</td></tr>
            <tr>
                <td>
                    <div class="input-group">
                        <input type="text" id="StudentPhoneNo" name="StudentPhoneNo" class="input-area" pattern="^[789]{1}[0-9]{9}$" value="@Model.StudentPhoneNo" required />
                        <label for="StudentPhoneNo" class="label">Phone Number</label>
                    </div>
                </td>
            </tr>
            <tr><td>&nbsp;</td></tr>
            <tr>
                <td style="font-size:20px;"> &nbsp; Gender </td>
            </tr>
            <tr>
                <td style="font-size:20px;">
                    &nbsp;
                    @if (Model.StudentGender == "M")
                    {
                        <input type="radio" id="Male" name="StudentGender" value="M" checked required />
                        <label for="Male">Male&nbsp;&nbsp;</label>
                        <input type="radio" id="Female" name="StudentGender" value="F" required />
                        <label for="Female">Female</label>

                    }
                    @if (Model.StudentGender == "F")
                    {
                        <input type="radio" id="Male" name="StudentGender" value="M" required />
                        <label for="Male">Male&nbsp;&nbsp;</label>
                        <input type="radio" id="Female" name="StudentGender" value="F" checked required />
                        <label for="Female">Female</label>
                    }
                </td>
            </tr>
        </table>
        <br />
        <table align="center">
            <tr>
                <td style="position: absolute; margin-left: -200px;"><a href="/Student/Read" class="blue-link">Back</a></td>
                <td style="position: absolute; margin-left: 110px;"><a href="#" class="blue-button" onclick="this.closest('form').submit(); return false;">Update</a></td>
            </tr>
        </table>
        <br />
        <br />
        <br />
        <br />
        if (ViewBag.Status == "updated")
        {
            <h6 style="text-align:center">Student Record Updated</h6>
        }
    }
</div>


