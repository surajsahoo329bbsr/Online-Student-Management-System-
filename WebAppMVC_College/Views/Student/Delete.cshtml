@model WebAppMVC_College.models.Student

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<style type="text/css">

    td{
        font-size: 20px;
    }

    h4 {
        font-size: 24px;
    }

    .card {
        box-shadow: 0 4px 8px 0 #8D8D8D;
        border-radius: 5px;
        transition: 0.3s;
        padding: 40px;
        width: 500px;
        height: 600px;
        position: relative;
        margin-top: 20px;
        margin-bottom: auto;
        margin-left: auto;
        margin-right: auto;
        background-color: #FFFFFF;
    }

    .blue-link {
        font-size: 24px;
        color: #03A9F4;
        text-decoration: none;
    }

        .blue-link:hover {
            color: #01579B;
            transition: 0.8s;
            text-decoration: none;
        }

    .blue-button {
        font-size: 24px;
        border-radius: 8px;
        padding: 14px 12px;
        background-color: #03A9F4;
        color: #FFFFFF;
        text-decoration: none;
    }

        .blue-button:hover {
            background-color: #01579B;
            color: #FFFFFF;
            transition: 0.8s;
            text-decoration: none;
        }

    body {
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        background-image: url("/assets/img/delete.jpg");
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>

@if (ViewBag.Status == "deleted")
{
    <h2 style="text-align:center">Student Record Deleted</h2>
}
else
{
    <div class="card">
        <h2 style="font-size:40px; margin-left:20px; font-weight: bold;">Delete</h2>
        @using (Html.BeginForm("Delete", "Student", FormMethod.Post))
        {
            string Path = "data:image/png;base64," + Convert.ToBase64String(Model.StudentPhoto, 0, Model.StudentPhoto.Length);           
            <table style="margin-top:20px;margin-bottom:20px; margin-left: 25px;">
                <tr>
                    <td> <img alt="" src="@Path" style="height:100px; width:100px;" /></td>
                </tr>
                <tr>
                    <td>Student Id &nbsp;</td>
                    <td>@Model.StudentId</td>
                </tr>
                <tr>
                    <td>Student Name &nbsp; </td>
                    <td>@Model.StudentName</td>
                </tr>
                <tr>
                    <td>Phone Number &nbsp; </td>
                    <td>@Model.StudentPhoneNo</td>
                </tr>
                <tr>
                    <td>Gender</td>
                    <td>@Model.StudentGender</td>
                </tr>
                <tr>
                    <td>Admin Id &nbsp; </td>
                    <td>@Model.AdminId</td>
                </tr>
            </table>
            <br />
            <table align="center">
                <tr>
                    <th style="font-size:20px;">Are you sure you want to delete this record ?</th>
                </tr>
                <tr>
                    <td style="position: absolute; margin-left: 0px; margin-top: 40px;"><a href="/Student/Read" class="blue-link">No</a></td>
                    <td style="position: absolute; margin-left: 250px; margin-top: 40px;"><a href="#" class="blue-button" onclick="this.closest('form').submit(); return false;">Yes, Delete</a></td>
                </tr>
            </table>
        }
    </div>

}

